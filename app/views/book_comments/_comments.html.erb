<% book.book_comments.each do |book_comment| %>
  <table class="table">
    <tr>
      <td>
        <%= link_to user_path(book_comment.user_id) do %>
    <%= image_tag book_comment.user.get_profile_image %>
    <% end %>
    </td>
    <td><%= book_comment.user.name %></td>
    <td><%= book_comment.comment %></td>
    <td><%= book_comment.created_at.strftime("%Y/%m/%d") %></td>
    <% if book_comment.user_id == current_user.id %>
    <td><%= link_to "Destroy",book_book_comment_path(book,book_comment.id),method: :delete,remote: true,class: "btn btn-danger" %></td>
    <% end %>
    </tr>
    <% end %>
  </table>